{
    "comments": {
        "lineComment": "|"
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""]
    ],
    "onEnterRules": [
        {
            "beforeText": "^\\s*\\|.*$",
            "action": {
                "indent": "none", 
                "appendText": "| "
            }
        }
    ]
}