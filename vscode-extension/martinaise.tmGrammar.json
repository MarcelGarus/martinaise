{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "mar",
  "scopeName": "source.mar",
  "fileTypes": ["mar"],
  "patterns": [
    {
      "name": "keyword.default",
      "match": "\\b(fun|struct|enum|var)\\b"
    },
    {
      "name": "keyword.control",
      "match": "\\b(loop|for|in|break|return|if|else|switch)\\b"
    },
    { "include": "#comments" },
    {
      "name": "string.quoted.double",
      "begin": "\"",
      "end": "\""
    },
    {
      "name": "string.quoted.single",
      "match": "'."
    },
    {
      "name": "constant.numeric",
      "match": "\\b[0-9][0-9_]*(_(U8|U16|U32|U64|I8|I16|I32|I64))?\\b"
    },
    {
      "name": "entity.name.function",
      "match": "([a-z][a-zA-Z_0-9]*)(?=\\s*(\\(|\\[))"
    },
    {
      "name": "entity.name.type",
      "match": "\\b[A-Z][a-zA-Z_0-9]*\\b"
    },
    {
      "name": "variable",
      "match": "\\b[a-z][a-zA-Z_0-9]*\\b"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "entity.name.function",
          "match": "\\| [A-Za-z_0-9]*$"
        },
        {
          "name": "entity.name.function",
          "match": "\\| Welcome to Martinaise!"
        },
        {
          "name": "comment.line",
          "begin": "\\|",
          "end": "$",
          "patterns": [
            {
              "match": "\\bTODO\\b:?",
              "name": "keyword.todo"
            }
          ]
        }
      ]
    }
  }
}
